flow "MIXED_PROCESS" priority 3 {
    when {
        order.type == "precision" &&
        customer.priority >= 2
    }
    steps {
        req = analyze_requirements(order_id: order.id, specs: order.specs)
        timeline = create_timeline(requirements: $req, milestone: "design")
        notify_engineering(timeline: $timeline, reason: "New design requirement")
    }
} 