{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Effectus",
  "scopeName": "source.effectus",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.effectus",
          "match": "\\b(rule|when|then|emit|if|else|and|or|not|in|exists|forall|within|since|after|before|during|between)\\b"
        },
        {
          "name": "keyword.type.effectus", 
          "match": "\\b(string|number|boolean|timestamp|duration|list|map)\\b"
        },
        {
          "name": "keyword.operator.effectus",
          "match": "\\b(==|!=|<=|>=|<|>|&&|\\|\\||!)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.effectus",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.effectus",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.effectus",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.effectus",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.effectus",
          "match": "#.*$"
        },
        {
          "name": "comment.block.effectus",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.effectus",
          "match": "\\b\\d+(\\.\\d+)?([eE][+-]?\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.effectus",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.effectus",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.effectus",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.effectus",
          "match": "(\\+|\\-|\\*|\\/|%)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.effectus",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.property.effectus", 
          "match": "\\.[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    }
  }
} 